<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TesiNexus.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:icons="using:Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="TesiNexus.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="TesiNexus"
		Name="TesiNexus"
	    TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
		ExtendClientAreaToDecorationsHint="True"
		xmlns:bhv="clr-namespace:TesiNexus.Behaviors"
		WindowStartupLocation="CenterScreen" WindowState="Maximized" >


	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="DarkGray"
					TintOpacity="1"
					MaterialOpacity="0.60" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Image
			Source="/Assets/TesiNexusBeW.png"
			Width="800"
			Opacity="480"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			ZIndex="0"
			>
		</Image>

		<Grid Name="gridCenter"
			RowDefinitions="30, 60, *, 60">
			<Panel Grid.Row="0">
				<ExperimentalAcrylicBorder IsHitTestVisible="False">
					<ExperimentalAcrylicBorder.Material>
						<ExperimentalAcrylicMaterial
							BackgroundSource="Digger"
							TintColor="Black"
							TintOpacity="1"
							MaterialOpacity="0.65" />
					</ExperimentalAcrylicBorder.Material>
				</ExperimentalAcrylicBorder>
			</Panel>

			<!--Header-->
			<Panel
				Background="black"
				Name="MenuBar"
				Grid.Row="1"
				>
				<ExperimentalAcrylicBorder IsHitTestVisible="False">
					<ExperimentalAcrylicBorder.Material>
						<ExperimentalAcrylicMaterial
							BackgroundSource="Digger"
							TintColor="Black"
							TintOpacity="0"
							MaterialOpacity="0.65" />
					</ExperimentalAcrylicBorder.Material>

				</ExperimentalAcrylicBorder>

				<Grid ColumnDefinitions="*,1,*">
					<ToggleButton Classes="h"
						Background="Transparent"
						Grid.Column="0"
						Width="70"
						Height="58"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						IsChecked="{Binding ShowMenu, Mode=TwoWay}"
						>
						<icons:MaterialIcon
							Kind="Menu"
							Foreground="White"
							Height="50"
							Width="50"
							Margin="5"
							/>
					</ToggleButton>

					<SplitView
						Background="Gray"
						Grid.Column="1" Height="25"/>

					<StackPanel
						Grid.Column="2">

						<ContentControl
						
							ZIndex="1"
							Name="TopMenu"
							Content="{Binding TopMenuView, Mode=TwoWay}">

						</ContentControl>
					</StackPanel>
				</Grid>

			</Panel>

			<!--Header-->

			<!--Center-->

			<Grid
				Background="Transparent"
				Grid.Row="2">

				<Border Width="{Binding WidthBorder}"
						HorizontalAlignment="Left"
						BorderThickness="0.5"
						Margin="20,5,0,5"
						CornerRadius="10"
						BorderBrush="White"
						Background="Black"
						Opacity="155"
						ZIndex="10"
						>

					<StackPanel Classes.StackMenu="{Binding ShowMenu}"
								bhv:MouseOverBehav.Command="{Binding MouseOverCommand}"
								bhv:MouseLeaveBehav.Command="{Binding MouseLeaveCommand}">

						<RadioButton Content="Synchronizer"
							 Width="{Binding WidthButton}"
							 Foreground="White"
							 FontSize="16"
							 Classes="HamMenuOpen"
							 Name="Home"
							 HorizontalAlignment="Center"
							 Margin="0 10 0 0"
							 Command="{Binding ShowSynchronizerCommand}"/>

						<RadioButton Content="Configurações"
							 Width="{Binding WidthButton}"
							 Foreground="White"
							 FontSize="16"
							 Classes="HamMenuOpen"
							 Name="Cog"
							 HorizontalAlignment="Center"
							 Margin="0 10 0 0"
							 />


					</StackPanel>

				</Border>

				<ContentControl
					ZIndex="1"
					Margin="{Binding Margin, Mode=TwoWay}"
					Name="Main"
					Content="{Binding CurrentView, Mode=TwoWay}"
					>

				</ContentControl>
			</Grid>

			<!--Center-->

			<!--Footer-->
			<Panel
				Background="black"
				Name="Footer"
				Grid.Row="3"
				>
				<ExperimentalAcrylicBorder IsHitTestVisible="False">
					<ExperimentalAcrylicBorder.Material>
						<ExperimentalAcrylicMaterial
							BackgroundSource="Digger"
							TintColor="Black"
							TintOpacity="0"
							MaterialOpacity="0.65" />
					</ExperimentalAcrylicBorder.Material>
				</ExperimentalAcrylicBorder>

				<Image
					Source="/Assets/TesiNexus.png"
					HorizontalAlignment="Right"
					Height="30"
					Margin="20"
					ToolTip.Tip="Sobre o TesiNexus"
					ToolTip.ShowDelay="10">

				</Image>
			</Panel>

			<!--Footer-->
		</Grid>
	</Grid>


</Window>
