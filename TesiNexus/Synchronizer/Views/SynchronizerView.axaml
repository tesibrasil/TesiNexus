<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:TesiNexus.Synchronizer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
             x:Class="TesiNexus.Synchronizer.Views.SynchronizerView">

	<Design.DataContext>
		<vm:SynchronizerViewModel/>
	</Design.DataContext>


	<Grid ColumnDefinitions="*,auto">
		<Panel Background="Transparent"
			   Name="pnlLeft">

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="100"/>
					<RowDefinition/>
				</Grid.RowDefinitions>

				<Panel
					Grid.Row="0"
					Classes="ThirdGray"
					Margin="0 10 10 10">

					<Grid >
						<Grid.ColumnDefinitions>
							<ColumnDefinition  Width="*" />
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<ComboBox
							 HorizontalAlignment="Stretch" Grid.Column="0"
							 VerticalAlignment="Center"
							 Margin="10,0,0,0"
							 Classes="CustomComboBox"
								 />


						<Button
							Grid.Column="1"
							Width="150"
							Height="50"
							Margin="10"
							Content="Novo Grupo"
							Name="btnNewGroup"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center"
							Classes="PrimaryGrayColor ColorFont">

						</Button>
					</Grid>

				</Panel>

				<Panel
					Grid.Row="1"
					Classes="ThirdGray"
					Margin="0 0 10 10">



				</Panel>
			</Grid>


		</Panel>

		<Panel
			Name="pnlRight"
			Grid.Column="1"
			Background="Transparent"
			MinWidth="600">

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition/>
				</Grid.RowDefinitions>

				<Panel
					Grid.Row="0"
					Classes="ThirdGray"
					Margin="0 10 10 0"
					Height="300">

				</Panel>

				<Panel
					Grid.Row="1"
					Classes="ThirdGray"
					Margin="0 10 10 10">
					
				</Panel>
			</Grid>
		</Panel>
	</Grid>


</UserControl>
